@model WebsiteTMDT.Data.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Views/Shared/_AdminDashBoard.cshtml";
}

<div class="container">
    <h2 class="mt-4 text-danger">Chi tiết người dùng</h2>
    <hr />

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                Họ và tên
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt class="col-sm-3 fw-bold">
                Email
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 fw-bold">
                Số điện thoại
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt class="col-sm-3 fw-bold">
                Địa chỉ
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt class="col-sm-3 fw-bold">
                Ngày tạo tài khoản
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt class="col-sm-3 fw-bold">
                Vai trò
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Role.RoleName)
            </dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
        </div>
    </div>
</div>
