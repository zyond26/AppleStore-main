@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form method="post" action="/Account/ResetPasswordConfirm" style="max-width: 400px; margin: 0 auto; padding: 30px; border: 1px solid #ccc; border-radius: 10px; background-color: #f9f9f9;">
    <h2 style="text-align: center; margin-bottom: 30px;">🔒 Đặt lại mật khẩu</h2>
    <input type="hidden" name="token" value="@ViewBag.Token" />

    <div style="margin-bottom: 20px;">
        <input type="password" name="newPassword" placeholder="Mật khẩu mới" required
               style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 14px; color: black;" />
    </div>

    <div style="margin-bottom: 20px;">
        <input type="password" name="confirmPassword" placeholder="Xác nhận mật khẩu" required
               style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 14px; color: black;" />
    </div>

    <button type="submit"
            style="width: 100%; padding: 12px; background-color: #007bff; color: white; border: none; border-radius: 8px; font-size: 16px; cursor: pointer;">
        Xác nhận
    </button>
</form>

