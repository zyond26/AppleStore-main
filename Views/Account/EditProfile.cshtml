@model WebsiteTMDT.Data.User
@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg rounded-3" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-3">Chỉnh sửa thông tin</h3>

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }

        <form asp-action="EditProfile" method="post">
            <div class="mb-2">
                <label for="fullName" class="form-label">Họ và tên</label>
                <input type="text" class="form-control" id="fullName" name="fullName" value="@Model.FullName" required />
            </div>

            <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="@Model.Email" required />
            </div>

            <div class="mb-2">
                <label for="phone" class="form-label">Số điện thoại</label>
                <input type="text" class="form-control" id="phone" name="phone" value="@Model.Phone" required />
            </div>

            <div class="mb-2">
                <label for="address" class="form-label">Địa chỉ</label>
                <input type="text" class="form-control" id="address" name="address" value="@Model.Address" required />
            </div>

            <div class="mb-2">
                <label for="newPassword" class="form-label">Mật khẩu mới</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="newPassword" name="newPassword" />
                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                        <i class="bi bi-eye-slash" id="toggleIcon"></i>
                    </button>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
            <hr />
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger w-100">Thoát</a>
        </form>
    </div>
</div>

