					<div class="products-tabs">
						<!-- tab -->
						<div id="tab2" class="tab-pane fade in active">
							<div class="products-slick" data-nav="#slick-nav-2">
								<!-- product -->
								@foreach (var item in Model.Where(p => p.TenLoai == "iPhone" || p.TenLoai == "Apple Watch" || p.TenLoai == "MacBook"))
								{
									var discount = new Random().Next(10, 50);
									var oldPrice = item.Gia * (1 + discount / 100.0);
									<!-- product -->
									<div class="product">
										<a class="product-img" asp-controller="Product" asp-action="Detail" asp-route-id="@item.MaSP">
											<img src="@item.HinhAnh" alt="">
											<div class="product-label">
												<span class="sale">-@discount%</span>
												<span class="new">NEW</span>
											</div>
										</a>
										<div class="product-body">
											<p class="product-category">@item.TenLoai</p>
											<h3 class="product-name"><a href="#">@item.TenSP</a></h3>
											<h4 class="product-price">$@item.Gia <del class="product-old-price">$@oldPrice.ToString("0.00")</del></h4>
										</div>
										<div class="add-to-cart">
											<form asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.MaSP">
												<button class="add-to-cart-btn" data-id="1"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</button>
											</form>
										</div>
									</div>
									<!-- /product -->
								}
								<!-- /product -->
							</div>
							<div id="slick-nav-2" class="products-slick-nav"></div>
						</div>
						<!-- /tab -->
					</div>
				</div>
			</div>
			<!-- /Products tab & slick -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
