@{
    ViewBag.Title = "Liên Hệ";
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert("@Html.Raw(TempData["SuccessMessage"])");
    </script>
}
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h2 class="title">Liên hệ với chúng tôi</h2>
                <form id="contact-form" method="post" asp-action="SubmitForm" asp-controller="Home">
                    <div class="form-group">
                        <input class="input" type="text" name="Name" placeholder="Tên của bạn" required>
                    </div>
                    <div class="form-group">
                        <input class="input" type="email" name="Email" placeholder="Email của bạn" required>
                    </div>
                    <div class="form-group">
                        <textarea class="input" name="Message" placeholder="Tin nhắn của bạn" required></textarea>
                    </div>
                    <button type="submit" class="primary-btn">Gửi Tin Nhắn</button>
                </form>
            </div>
            <div class="col-md-5">
                <h3 class="title">Thông tin liên hệ</h3>
                <ul class="contact-info">
                    <li><i class="fa fa-map-marker"></i> Hà Nội, Việt Nam</li>
                    <li><i class="fa fa-phone"></i> +999999999</li>
                    <li><i class="fa fa-envelope"></i> email@email.com</li>
                </ul>
                <br>
                <h3 class="title">Bản đồ</h3>
                <div class="map-container" style="width:100%;height:300px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3723.9232128577586!2d105.81945431488302!3d21.03576198599339!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab4499b5b8db%3A0x8c11d14e7c6f6ea2!2zSMOgIE7hu5lp!5e0!3m2!1svi!2s!4v1632925278305!5m2!1svi!2s" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
