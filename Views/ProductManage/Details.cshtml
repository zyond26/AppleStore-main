@model WebsiteTMDT.Data.Product

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="container mt-4" style="max-width: 900px;">
    <h2 class="text-primary"><i class="fas fa-info-circle"></i> Chi Tiết Sản Phẩm</h2>
    <hr />

    <div class="row">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid rounded shadow">
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-8">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light">Tên sản phẩm</th>
                        <td>@Html.DisplayFor(model => model.ProductName)</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Giá</th>
                        <td>@Html.DisplayFor(model => model.Price) $</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Số lượng tồn kho</th>
                        <td>@Html.DisplayFor(model => model.StockQuantity)</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Dung lượng</th>
                        <td>@Html.DisplayFor(model => model.Capacity)</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Màu sắc</th>
                        <td>@Html.DisplayFor(model => model.Color)</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Mô tả</th>
                        <td>@Html.DisplayFor(model => model.Description)</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Ngày tạo</th>
                        <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Danh mục</th>
                        <td>@Html.DisplayFor(model => model.Category.CategoryName)</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
