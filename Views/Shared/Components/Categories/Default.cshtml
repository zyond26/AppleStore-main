@model IEnumerable<WebsiteTMDT.ViewModels.CategoriesVM>

<!-- aside Widget -->
<div class="aside">
	<h3 class="aside-title">Danh Mục</h3>
	<div class="checkbox-filter">
		@foreach(var item in Model) {
			<div class="input-checkbox">
				<a id="category-1" asp-controller="Product" asp-action="Index" asp-route-loai="@item.MaLoai">
					<label for="category-1">
						@item.TenLoai
					</label>
				</a>
			</div>
		}
	</div>
</div>
<!-- /aside Widget -->