<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Thêm Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons (nếu chưa có) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <style>
        thead {
            position: sticky;
            top: 0;
            background-color: #343a40; /* Màu nền tiêu đề */
            color: white;
            z-index: 10;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger px-4">
        <a class="navbar-brand fw-bold" href="#">Admin Dashboard</a>
        <div class="ms-auto d-flex align-items-center">
            <span class="text-white me-3">Xin chào, Admin <b style="color: aqua">@User.Identity.Name</b></span>
            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </div>
    </nav>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-white border-end p-3" style="width: 280px; min-height: 100vh;">
            <ul class="nav flex-column">
                <li class="nav-item"><a asp-controller="Home" asp-action="DashBoard" class="nav-link text-dark"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                <li class="nav-item"><a asp-controller="Users" asp-action="Index" class="nav-link text-dark"><i class="fas fa-users me-2"></i>Quản lý người dùng</a></li>
                <li class="nav-item"><a asp-controller="ProductManage" asp-action="Index" class="nav-link text-dark"><i class="fas fa-box me-2"></i>Quản lý sản phẩm</a></li>
                <li class="nav-item"><a asp-controller="Order" asp-action="Index" class="nav-link text-dark"><i class="fas fa-shopping-cart me-2"></i>Quản lý đơn hàng</a></li>
                <li class="nav-item"><a asp-controller="Promotion" asp-action="Index" class="nav-link text-dark"><i class="fas fa-tags me-2"></i>Quản lý khuyến mãi</a></li>
                <li class="nav-item"><a asp-controller="Report" asp-action="Index" class="nav-link text-dark"><i class="fas fa-chart-line me-2"></i>Theo dõi thống kê</a></li>
                <li class="nav-item"><a asp-controller="Chat" asp-action="Index" class="nav-link text-dark"><i class="fas fa-headset me-2"></i>Quản lí hỗ trợ</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link text-danger"><i class="fas fa-sign-out-alt me-2"></i>Đăng Xuất</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", required: false)
    <!-- JavaScript để hiện/ẩn mật khẩu -->
    <script>
        function togglePassword() {
        var passwordInput = document.getElementById("passwordField");
        var toggleIcon = document.getElementById("toggleIcon");

            if (passwordInput) {
                if (passwordInput.type === "password") {
                    passwordInput.type = "text";
                    toggleIcon.classList.replace("bi-eye-slash", "bi-eye");
                } else {
                    passwordInput.type = "password";
                    toggleIcon.classList.replace("bi-eye", "bi-eye-slash");
                }
            }
        }
    </script>

    <!-- Xem Hình Ảnh -->
    <script>
        function updatePreview() {
            var imageUrl = document.getElementById("imageUrlInput").value;
            var imagePreview = document.getElementById("imagePreview");

            if (imageUrl) {
                imagePreview.src = imageUrl;
                imagePreview.style.display = "block";
            } else {
                imagePreview.style.display = "none";
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
</html>
